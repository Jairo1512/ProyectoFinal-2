@{
}
@model List<Empleados.Models.Empleado>;
<div class="row">
   <div class="col-sm-8 offset-sm-2"
      <h2>Lista empleados</h2>
      <a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>
      <table class="table table-bordered"
             <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre Completo</th>
                    <th>Correo</th>
                    <th>Fecha Contrato</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model )
                {
                    <tr>
                        <td>@item.IdEmpleado</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.correo</td>
                        <td>@item.FechaContrato</td>
                        <td>@(item.Activo ? "SI": "NO")</td>
                        <td>
                                <a 
                                    asp-controller="Empleado"
                                    asp-route-id="@item.IdEmpleado"
                                    asp-action="Editar" class="btn btn-primary">Editar</a>

                                <a
                                   asp-controller="Empleado"
                                   asp-route-id="@item.IdEmpleado"
                                   onclick="return confirm()"
                                   asp-action="Eliminar" class="btn btn-danger">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script>
        return confirm("Esta seguro de eliminar el empleado?")
    </script>
}